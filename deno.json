{
	"tasks": {
		"build:client": "deno bundle --platform browser src/client.tsx -o dist/client.js",
		"build:css": "esbuild src/styles.css --bundle --platform=browser --outfile=dist/styles.css --loader:.woff=file --loader:.woff2=file --loader:.ttf=file --loader:.eot=file",
		"build": {
			"dependencies": ["build:client", "build:css"]
		},
		"dev:client": "deno bundle --platform browser --watch src/client.tsx -o dist/client.js",
		"dev:css": "esbuild --watch src/styles.css --bundle --platform=browser --outfile=dist/styles.css --loader:.woff=file --loader:.woff2=file --loader:.ttf=file --loader:.eot=file",
		"host": "deno run --allow-net --allow-read jsr:@std/http/file-server --port 8080",
		"dev": {
			"dependencies": ["dev:client", "dev:css", "host"]
		}
	},
	"nodeModulesDir": "auto",
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@types/react": "npm:@types/react@^19.1.12",
		"esbuild": "npm:esbuild@^0.25.9",
		"react": "npm:react@^19.1.1",
		"reveal.js": "npm:reveal.js@^5.2.1"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"exclude": [
		"dist/"
	]
}
